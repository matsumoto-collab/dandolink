// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  username         String   @unique
  email            String   @unique
  displayName      String
  passwordHash     String
  role             String   @default("VIEWER")
  assignedProjects String?  // JSON array of project IDs
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([username])
  @@index([email])
}

model Project {
  id                   String   @id @default(uuid())
  title                String
  constructionType     String
  startDate            DateTime
  endDate              DateTime?
  assemblyStartDate    DateTime?
  assemblyDuration     Int?
  demolitionStartDate  DateTime?
  demolitionDuration   Int?
  assignedEmployeeId   String
  customer             String?
  description          String?
  location             String?
  category             String?
  workers              String?  // JSON array
  vehicles             String?  // JSON array
  remarks              String?
  sortOrder            Int      @default(0)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([assignedEmployeeId])
  @@index([startDate])
  @@index([endDate])
  @@index([createdAt])
  @@index([updatedAt])
}

model Customer {
  id              String   @id @default(uuid())
  name            String
  shortName       String?
  contactPersons  String?  // JSON array of ContactPerson
  email           String?
  phone           String?
  fax             String?
  address         String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
  @@index([createdAt])
  @@index([updatedAt])
}

model Estimate {
  id              String   @id @default(uuid())
  projectId       String?
  estimateNumber  String   @unique
  title           String
  items           String   // JSON array of EstimateItem
  subtotal        Float
  tax             Float
  total           Float
  validUntil      DateTime
  status          String   @default("draft")
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([estimateNumber])
  @@index([projectId])
  @@index([status])
  @@index([createdAt])
  @@index([updatedAt])
}

model Invoice {
  id             String    @id @default(uuid())
  projectId      String
  estimateId     String?
  invoiceNumber  String    @unique
  title          String
  items          String    // JSON array of EstimateItem
  subtotal       Float
  tax            Float
  total          Float
  dueDate        DateTime
  status         String    @default("draft")
  paidDate       DateTime?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([invoiceNumber])
  @@index([projectId])
  @@index([status])
  @@index([dueDate])
  @@index([createdAt])
  @@index([updatedAt])
}
