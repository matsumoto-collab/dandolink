// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  username         String   @unique
  email            String   @unique
  displayName      String
  passwordHash     String
  role             String   @default("manager")  // admin, manager, foreman1, foreman2, worker, partner
  teamId           String?  // 所属職長ID（職方用）
  assignedProjects String?  // JSON array of project IDs
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([username])
  @@index([email])
}

// 案件マスター（1現場=1レコード）
model ProjectMaster {
  id               String   @id @default(uuid())
  title            String   // 現場名
  customer         String?  // 顧客名
  constructionType String   // 工事種別: assembly, demolition, other
  status           String   @default("active") // active, completed, cancelled
  location         String?  // 場所
  description      String?  // 説明
  remarks          String?  // 備考
  createdBy        String?  // 案件担当者（JSON array for multiple）
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // リレーション
  assignments      ProjectAssignment[]

  @@index([title])
  @@index([customer])
  @@index([status])
  @@index([createdAt])
}

// 案件配置（班・日付への割り当て）
model ProjectAssignment {
  id                   String   @id @default(uuid())
  projectMasterId      String   // 案件マスターへの参照
  projectMaster        ProjectMaster @relation(fields: [projectMasterId], references: [id], onDelete: Cascade)
  
  assignedEmployeeId   String   // 担当職長ID
  date                 DateTime // 作業日
  memberCount          Int      @default(0) // 人数
  workers              String?  // JSON array: 職方ID配列
  vehicles             String?  // JSON array: 車両ID配列
  meetingTime          String?  // 集合時間（例: "08:00"）
  sortOrder            Int      @default(0) // カレンダー内での表示順序
  remarks              String?  // 配置固有の備考
  
  // 手配確定フィールド
  confirmedWorkerIds   String?  // JSON array: 確定職方ID配列
  confirmedVehicleIds  String?  // JSON array: 確定車両ID配列
  isDispatchConfirmed  Boolean  @default(false)
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([projectMasterId])
  @@index([assignedEmployeeId])
  @@index([date])
  @@index([isDispatchConfirmed])
  @@unique([projectMasterId, assignedEmployeeId, date]) // 同一案件・同一職長・同一日付は1件
}

model Customer {
  id              String   @id @default(uuid())
  name            String
  shortName       String?
  contactPersons  String?  // JSON array of ContactPerson
  email           String?
  phone           String?
  fax             String?
  address         String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([name])
  @@index([createdAt])
  @@index([updatedAt])
}

model Estimate {
  id              String   @id @default(uuid())
  projectMasterId String?  // 案件マスターへの参照
  estimateNumber  String   @unique
  title           String
  items           String   // JSON array of EstimateItem
  subtotal        Float
  tax             Float
  total           Float
  validUntil      DateTime
  status          String   @default("draft")
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([estimateNumber])
  @@index([projectMasterId])
  @@index([status])
  @@index([createdAt])
  @@index([updatedAt])
}

model Invoice {
  id             String    @id @default(uuid())
  projectMasterId String   // 案件マスターへの参照
  estimateId     String?
  invoiceNumber  String    @unique
  title          String
  items          String    // JSON array of EstimateItem
  subtotal       Float
  tax            Float
  total          Float
  dueDate        DateTime
  status         String    @default("draft")
  paidDate       DateTime?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([invoiceNumber])
  @@index([projectMasterId])
  @@index([status])
  @@index([dueDate])
  @@index([createdAt])
  @@index([updatedAt])
}

// マスターデータ: 車両
model Vehicle {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

// マスターデータ: 職人
model Worker {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

// マスターデータ: 案件担当者
model Manager {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

// システム設定
model SystemSettings {
  id           String   @id @default("default")
  totalMembers Int      @default(20)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// 単価マスター
model UnitPriceMaster {
  id          String   @id @default(uuid())
  description String   // 品目・内容
  unit        String   // 単位（式、m、個、日）
  unitPrice   Float    // 単価
  templates   String   // テンプレート配列をJSON文字列で保存
  notes       String?  // 備考
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([description])
}

// 会社情報
model CompanyInfo {
  id             String   @id @default("default")
  name           String
  postalCode     String
  address        String
  tel            String
  fax            String?
  email          String?
  representative String
  sealImage      String?  // Base64 or URL
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// カレンダー備考（日付ごと）
model CalendarRemark {
  id        String   @id @default(uuid())
  dateKey   String   @unique  // YYYY-MM-DD
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dateKey])
}

// 休暇データ（日付ごと）
model VacationRecord {
  id          String   @id @default(uuid())
  dateKey     String   @unique  // YYYY-MM-DD
  employeeIds String   // JSON array of employee IDs
  remarks     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dateKey])
}

// ユーザー設定（表示設定など、ユーザーごと）
model UserSettings {
  id                  String   @id @default(uuid())
  userId              String   @unique
  displayedForemanIds String   // JSON array of foreman IDs
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
}
